<div class="signup_container container">
<div class="text-center my-2">
 <h2 class="page_heading mb-5">Log In</h2>
</div>
           

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  
  <div class="form-group row mt- ">
        <%= f.label :email, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control",placeholder:"Email",autofocus: true, autocomplete: "email"  %>
    </div>
  </div>


  <div class="form-group row">
      <%= f.label "Password", class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "current-password",class: "form-control
    ",placeholder:"Password" %>
    </div>
  </div>

   
  <div class="form-group row">
    <div class="col-sm-10">
          <%= f.submit "Log in", class:"btn btn-primary" %>
      <div class="row">
        <p class="mt-2"><Strong><%= link_to "Signup", :new_user_registration,class:"nav-link"  %></Strong></p>
      </div>
    </div>
  </div>

<% end %>
</div>
