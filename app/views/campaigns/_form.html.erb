
<%= form_with model: campaign do |f| %>
  
  <div class="form-group row mt-5">
        <%= f.label :title, class:"col-sm-2 col-form-label"  %>

    <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control",placeholder:"Title"  %>
    </div>
  </div>
  
  <div class="form-group row  ">
        <%= f.label :purpose, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
        <%= f.text_field :purpose, class: "form-control",placeholder:"Purpose"  %>
    </div>
  </div>

  <div class="form-group row  ">
        <%= f.label :estimated_duration, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
        <%= f.select :estimated_duration, Campaign.estimated_durations.keys, {}, class:'form-control' %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-10">
    <% if campaign.persisted? %>
        <%= f.submit "Create" , class:"btn btn-dark" %>      
    <% else %>
        <%= f.submit "Update" , class:"btn btn-dark" %>      
      <% end %>
    </div>
  </div>

<% end %>
</div>
