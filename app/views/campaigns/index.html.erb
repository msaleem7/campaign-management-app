<div class="container">
    <div class="text-center my-2">
        <h2 class="page_heading">Campaigns</h2>
    </div>
    <table class="table table-striped table-hover table-responsive-sm index_table">
  <thead class="thead-dark">
    <tr class="table_row">
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Purpose</th>
      <th scope="col">Created By</th>
    </tr>
  </thead>
  <tbody>
  <% @campaigns.each_with_index do |campaign, index|%>                    
    <tr class="table_row">
      <th scope="row"><%= index %></th>
      <td><%= link_to campaign.title.capitalize, campaign ,id:"index_links"%></td>
      <td><%= campaign.purpose %></td>
      <td><%= campaign.expert.username %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% if policy(@campaigns).create? %> <div class="col"> <%= link_to 'Add Campaign', :new_campaign,class:"btn btn-outline-dark btn-sm mx-1" ,  role:"button" %> </div> <% end %>
</div>
