<div class="container">
    <div class="text-center my-2">
        <h2 class="page_heading">Experts</h2>
    </div>
    <table class="table table-striped table-hover table-responsive-sm index_table">
  <thead class="thead-dark">
    <tr class="table_row">
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Profession</th>
      <th scope="col">Service</th>
    </tr>
  </thead>
  <tbody>
  <% @experts.each_with_index do |expert, index|%>                    
    <tr>
      <th scope="row"><%= index %></th>
      <td><p id="index_links"><%= expert.username.capitalize%><p></td>
      <td><%= expert.profession %></td>
      <td><%= expert.service %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
